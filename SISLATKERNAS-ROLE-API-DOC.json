                            "type": "integer"
                          },
                          "sort": {
                            "type": "integer"
                          },
                          "children": {
                            "type": "array",
                            "items": {
                              "id": {
                                "type": "integer"
                              },
                              "icon": {
                                "type": "string"
                              },
                              "menu": {
                                "type": "string"
                              },
                              "url": {
                                "type": "integer"
                              },
                              "parent_id": {
                                "type": "integer"
                              },
                              "sort": {
                                "type": "integer"
                              },
                              "children": {
