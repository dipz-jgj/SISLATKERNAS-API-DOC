{
  "openapi": "3.0.3",
  "info": {
    "title": "Role & Menu API",
    "description": "Role & Menu API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080"
    }
  ],
  "paths": {
    "/api/v1/roles": {
      "get": {
        "description": "Ambil semua data role",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header"
          }
        ],
        "responses": {
          "200": {
            "description": "Sukses mengambil data roles",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "role_name": {
                            "type": "string"
                          },
                          "role_description": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "errors": {
                      "type": "object"
                    },
                    "meta": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/role/{id}": {
      "get": {
        "description": "Mengambil data role tunggal",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header"
          }
        ],
        "responses": {
          "200": {
            "description": "Sukses mengambil data role",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "role_name": {
                            "type": "string"
                          },
                          "role_description": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "errors": {
                      "type": "object"
                    },
                    "meta": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "patch": {
        "description": "Update data role",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header"
          }
        ],
        "requestBody": {
          "description": "Memperbarui data role",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "role_name": {
                    "type": "string"
                  },
                  "role_description": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sukses memperbarui data role",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "role_name": {
                          "type": "string"
                        },
                        "role_description": {
                          "type": "string"
                        }
                      }
                    },
                    "errors": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "description": "Menghapus role",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header"
          }
        ],
        "responses": {
          "200": {
            "description": "Sukses menghapus role",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "boolean"
                    },
                    "errors": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/role": {
      "post": {
        "description": "Membuat role baru",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "role_name",
                  "role_description"
                ],
                "properties": {
                  "role_name": {
                    "type": "string"
                  },
                  "role_description": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Sukses mendaftarkan/membuat role baru",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "role_name": {
                          "type": "string"
                        },
                        "role_description": {
                          "type": "string"
                        }
                      }
                    },
                    "errors": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "examples": {
                  "validationerror": {
                    "description": "Validation error",
                    "value": {
                      "errors": {
                        "email": [
                          "role_name tidak boleh kosong"
                        ]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/role/{id}/role-menu": {
      "get": {
        "description": "Ambil semua daftar menu berdasarkan id role",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header"
          }
        ],
        "responses": {
          "200": {
            "description": "Sukses mengambil data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "id_role": {
                            "type": "integer"
                          },
                          "role_name": {
                            "type": "string"
                          },
                          "id_menu": {
                            "type": "integer"
                          },
                          "menu": {
                            "type": "string"
                          },
                          "view": {
                            "type": "boolean"
                          },
                          "manage": {
                            "type": "boolean"
                          }
                        }
                      }
                    },
                    "errors": {
                      "type": "object"
                    },
                    "meta": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/role-menu": {
      "post": {
        "description": "Membuat role menu permission baru",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "id_role",
                  "id_menu",
                  "view",
                  "manage"
                ],
                "properties": {
                  "id_role": {
                    "type": "integer"
                  },
                  "id_menu": {
                    "type": "integer"
                  },
                  "view": {
                    "type": "boolean"
                  },
                  "manage": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Sukses",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "id_role": {
                          "type": "integer"
                        },
                        "role_name": {
                          "type": "string"
                        },
                        "id_menu": {
                          "type": "integer"
                        },
                        "view": {
                          "type": "boolean"
                        },
                        "manage": {
                          "type": "boolean"
                        }
                      }
                    },
                    "errors": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "examples": {
                  "validationerror": {
                    "description": "Validation error",
                    "value": {
                      "errors": {
                        "role_name": [
                          "role menu permission already registered"
                        ]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/role-menu/{id}": {
      "patch": {
        "description": "Update role menu permission",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header"
          }
        ],
        "requestBody": {
          "description": "Memperbarui data role menu permission",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "view": {
                    "type": "boolean"
                  },
                  "manage": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sukses",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "id_role": {
                          "type": "integer"
                        },
                        "role_name": {
                          "type": "string"
                        },
                        "id_menu": {
                          "type": "integer"
                        },
                        "view": {
                          "type": "boolean"
                        },
                        "manage": {
                          "type": "boolean"
                        }
                      }
                    },
                    "errors": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
